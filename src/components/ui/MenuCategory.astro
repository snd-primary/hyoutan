---
interface Props {
  title: string
  id: string
}

const { title, id } = Astro.props
---

<div class="mb-10" id={id}>
  <h3
    class="text-2xl md:text-3xl mb-5 pb-2.5 border-b-2 border-[#8e1919] font-['Kosugi_Maru',_sans-serif] text-[#8e1919]"
  >
    {title}
  </h3>
  <div>
    <slot />
  </div>
</div>
