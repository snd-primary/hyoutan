---
// Section.astro
interface Props {
  id: string
  title: string
  class?: string
}

const { id, title, class: className = '' } = Astro.props
---

<section id={id} class={`w-full h-max my-8 ${className}`}>
  <div class="section-title mb-6">
    <h2 class="text-2xl font-bold border-l-4 border-primary pl-3">{title}</h2>
  </div>
  <div class="section-content">
    <slot />
  </div>
</section>
